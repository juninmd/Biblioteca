@{
    ViewBag.Title = "Autores";
}
<h4>Autores</h4>
<div class="container" id="divGridAutor">

    <div class="row">
        <div class="col s1 offset-s11">
            <span class="flow-text">
                <a class="btn-floating btn-large waves-effect waves-light teal" title="Novo" id="btnNovoAutor" onclick="buscarForm()"><i class="material-icons">library_add</i></a>
            </span>
        </div>
    </div>  


    <div id="divContentAutores">
        @*@Html.Partial("_Grid")*@
    </div>


    <div id="divCadastroAutores">
        @*@Html.Partial("_Dados")*@
    </div>

</div>

<script>

    var buscarGrid = (function buscar() {

        $.get('@Url.Action("BuscarGrid", "Autor")').done(function (data) {
            $("#divContentAutores").html(data);
        }).fail(function (hrx) {
            alert(hrx.responsavelText);
        });

        return buscar;
    })();

    function buscarForm() {

        $.get('@Url.Action("BuscarForm", "Autor")').done(function (data) {
            $("#divCadastroAutores").html(data);
            $("#divContentAutores").hide();
            $(".grid_dados").show();
            $("#btnNovoAutor").hide();
        }).fail(function (hrx) {
            alert(hrx.responsavelText);
        });
    }

</script>