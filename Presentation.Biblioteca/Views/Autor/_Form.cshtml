@model MVC.Biblioteca.Models.AutorViewModel

@{ Layout = null; }

<div class="grid_dados">
    <div class="row">
        <div class="col s1 offset-s11">
            <span class="flow-text">
                <a class="btn-floating btn-large waves-effect waves-light teal btn_voltar" title="Voltar"><i class="material-icons">arrow_back</i></a>
            </span>
        </div>
    </div>

    <div class="row">
        <h5>Cadastre um novo autor</h5>
        <form class="col s12" action="@Url.Action("Post", "Autor")" method="post">
            <div class="row">
                <div class="col s5">
                    <input placeholder="Nome do Autor" id="nome_autor" type="text" class="validate" value="@Model.nomeAutor" required />
                    <label for="nome_livro">Nome do Autor</label>
                </div>
                <div class="col s5">
                    <input placeholder="Sobrenome do Autor" id="sobrenome_autor" type="text" class="validate" value="@Model.sobrenomeAutor" required />
                    <label for="nome_livro">Sobrenome do Autor</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action" id="btnSalvarAutor" onclick="">
                Salvar
                <i class="material-icons right">save</i>
            </button>
        </form>

    </div>
</div>

<script>

    $(".btn_voltar").click(function () {
        $.get('@Url.Action("BuscarGrid", "Autor")').done(function () {
            $("#divContentAutores").show();
            $(".grid_dados").hide();
            $("#btnNovoAutor").show();
            $(".btn_voltar").hide();
        }).fail(function (xhr) {
            alert(xhr.responseText);
        });
    });

    $("#btnSalvarAutor").click(function () {

        if ($("#btSalvarAutor").val() == "") {
            alert("É obrigatório o preenchimento de todos os campos!");
            return false;
        }
    });


</script>